@model List<Verveo.Entities.NewsletterSubscriber>
@{
    ViewData["Title"] = "E-Bülten Aboneleri";
}
<div class="container py-5">
    <h2 class="mb-4">E-Bülten Aboneleri</h2>
    <form method="post" action="/Admin/SendNewsletter" class="mb-4">
        <div class="row g-2">
            <div class="col-md-8">
                <textarea name="message" class="form-control" rows="3" placeholder="Abonelere gönderilecek mesaj..." required></textarea>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-gradient-premium w-100">Toplu Mail Gönder</button>
            </div>
        </div>
    </form>
    <table class="table table-hover table-borderless shadow-sm rounded bg-white">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>E-posta</th>
                <th>Kayıt Tarihi</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sub in Model)
            {
                <tr>
                    <td>@sub.Id</td>
                    <td>@sub.Email</td>
                    <td>@sub.SubscribedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@(sub.IsActive ? "Aktif" : "Pasif")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
