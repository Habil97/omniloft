@model List<Verveo.Entities.Role>
@{
    ViewData["Title"] = "Roller";
}
<div class="container py-5">
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" id="roleSearch" class="form-control" placeholder="Rol adına göre ara..." />
        </div>
    </div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Roller</h2>
        <a href="/Admin/AddRole" class="btn btn-primary px-4 py-2 fw-semibold rounded-pill shadow-sm">
            <i class="bi bi-person-plus"></i> Yeni Rol Ekle
        </a>
    </div>
    <table class="table table-hover table-borderless shadow-sm rounded bg-white">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody id="roleTableBody">
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td class="role-name">@role.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="/Admin/EditRole/@role.Id" class="btn btn-primary btn-sm rounded-pill me-2 d-flex align-items-center" style="min-width:60px;">
                                <i class="bi bi-pencil-square me-1"></i> Düzenle
                            </a>
                            <form asp-action="DeleteRole" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@role.Id" />
                                <button type="submit" class="btn btn-danger btn-sm rounded-pill d-flex align-items-center" style="min-width:60px;"
                                        onclick="return confirm('Rolü silmek istediğinize emin misiniz?');">
                                    <i class="bi bi-trash me-1"></i> Sil
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('roleSearch');
    const tableBody = document.getElementById('roleTableBody');
    searchInput.addEventListener('input', filterRoles);
    function filterRoles() {
        const search = searchInput.value.toLowerCase();
        Array.from(tableBody.rows).forEach(row => {
            const name = row.querySelector('.role-name').textContent.toLowerCase();
            const matchesSearch = name.includes(search);
            row.style.display = matchesSearch ? '' : 'none';
        });
    }
});
</script>
</div>
