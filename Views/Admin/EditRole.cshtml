@model Verveo.Entities.Role
@{
    ViewData["Title"] = "Rol Düzenle";
}
<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <h2 class="mb-4 text-center">Rol Düzenle</h2>
        <form asp-action="EditRole" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="mb-3">
                <label for="Name" class="form-label">Rol Adı</label>
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Güncelle</button>
        </form>
    </div>
</div>
