@model Verveo.Entities.User
@{
    ViewData["Title"] = "Kullanıcı Ekle";
}

<div class="container py-5">
    <h2 class="mb-4">Yeni Kullanıcı Ekle</h2>
    <form asp-action="AddUser" method="post">
        <div class="mb-3">
            <label for="FullName" class="form-label">Ad Soyad</label>
            <input type="text" class="form-control" id="FullName" name="FullName" required />
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" required />
        </div>
        <div class="mb-3">
            <label for="Password" class="form-label">Şifre</label>
            <input type="password" class="form-control" id="Password" name="Password" required />
        </div>
        <div class="mb-3">
            <label for="RoleId" class="form-label">Rol</label>
            <select class="form-control" id="RoleId" name="RoleId" required>
                <option value="">Rol Seçiniz</option>
                @foreach (var role in ViewBag.Roles as List<Verveo.Entities.Role>)
                {
                    if (Model.RoleId == role.Id)
                    {
                        <option value="@role.Id" selected="selected">@role.Name</option>
                    }
                    else
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Ekle</button>
    </form>
</div>
