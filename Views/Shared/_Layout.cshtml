                </a>
            </div>
            <div class="footer-section" style="max-width:340px;">
                @await Html.PartialAsync("_NewsletterSignupPartial")
            </div>
            <div class="footer-section">
                <h3 class="footer-section-title">Kurumsal</h3>
                <ul class="footer-section-list">
                    <li class="footer-section-item"><a class="footer-section-link" asp-controller="Home" asp-action="About">Hakkımızda</a></li>
                    <li class="footer-section-item"><a class="footer-section-link" asp-controller="Home" asp-action="Trademark">Markalar</a></li>
                    <li class="footer-section-item"><a class="footer-section-link" asp-controller="Home" asp-action="Vision">Vizyon</a></li>
                    <li class="footer-section-item"><a class="footer-section-link" asp-controller="Home" asp-action="HumanResources">İnsan Kaynakları</a></li>
                    <li class="footer-section-item"><a class="footer-section-link" asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a></li>
                </ul>   
            </div>
            <div class="footer-section">
                <h3 class="footer-section-title">Yardım</h3>
                <ul class="footer-section-list">
                    <li class="footer-section-item"><a class="footer-section-link" asp-controller="Home" asp-action="Faq">Sıkça Sorulan Sorular</a></li>  
                    <li class="footer-section-item"><a class="footer-section-link" asp-controller="Home" asp-action="Warranty">Garanti Koşulları</a></li>             
                    <li class="footer-section-item"><a class="footer-section-link" href="/ReturnRequest/MyRequests">İade İşlemleri</a></li>
                    <li class="footer-section-item"><a class="footer-section-link" href="/Order/MyOrders">Sipariş ve Kargo Takip</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3 class="footer-section-title">İletişim</h3>
                <ul class="footer-section-list">
                    <li class="footer-section-item">
                        <a class="footer-section-link" href="mailto:Habil_1997@hotmail.com?subject=Omniloft%20İletişim%20Talebi" target="_blank">
                            Bize Ulaşın
                        </a>
                    </li>                    
                    <li class="footer-section-item"><a class="footer-section-link" href="https://x.com/hblckrr" target="_blank" rel="noopener noreferrer">Twitter</a></li>
                    <li class="footer-section-item"><a class="footer-section-link" href="https://www.instagram.com/habilckr/" target="_blank" rel="noopener noreferrer">Instagram</a></li>
                    <li class="footer-section-item"><a class="footer-section-link" href="https://github.com/Habil97" target="_blank" rel="noopener noreferrer">Github</a></li>  
                    <li class="footer-section-item"><a class="footer-section-link" href="https://www.linkedin.com/in/habil%C3%A7ak%C4%B1r/" target="_blank" rel="noopener noreferrer">LinkedIn</a></li>        

                </ul>
            </div>
        </div>
    </footer>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
