@model List<Verveo.Entities.NewsletterSubscriber>
@{
    ViewData["Title"] = "E-Bülten Aboneleri";
}
<div class="container py-5">
    <h2 class="mb-4">E-Bülten Aboneleri</h2>
    @if (TempData["NewsletterSuccess"] != null)
    {
        <div class="alert alert-success mb-3" style="border-radius:1rem;font-size:1.1rem;">
            <i class="fas fa-check-circle me-2"></i> @TempData["NewsletterSuccess"]
        </div>
    }
    <form method="post" action="/AdminNewsletter/SendNewsletter" class="mb-4 p-4 rounded shadow-sm bg-gradient-newsletter text-white">
        <div class="row g-2 align-items-center">
            <div class="col-md-8">
                <textarea name="message" class="form-control" rows="3" placeholder="Abonelere gönderilecek mesaj..." required style="border-radius:1rem;"></textarea>
            </div>
            <div class="col-md-4 d-flex align-items-center">
                <button type="submit" class="btn btn-gradient-premium w-100 fw-bold py-2" style="font-size:1.1rem;border-radius:1.5rem;">Toplu Mail Gönder</button>
            </div>
        </div>
    </form>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-gradient-newsletter text-white fw-bold" style="font-size:1.15rem;">Abone Listesi</div>
        <div class="card-body p-0">
            <table class="table table-hover table-borderless mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width:60px;">ID</th>
                        <th>E-posta</th>
                        <th>Kayıt Tarihi</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sub in Model)
                    {
                        <tr>
                            <td>@sub.Id</td>
                            <td><span class="badge bg-gradient-newsletter text-white px-2 py-1" style="font-size:1rem;">@sub.Email</span></td>
                            <td>@sub.SubscribedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (sub.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <style>
        .bg-gradient-newsletter {
            background: linear-gradient(90deg,#43cea2 0%,#ffb347 100%) !important;
            color: #fff !important;
        }
    </style>
</div>
